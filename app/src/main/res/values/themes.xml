<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MiniGamesApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>


        <!-- Button style for all activities -->
        <item name="android:buttonStyle">@style/Widget.MiniGamesApp.Button</item>

        <!-- Background for consistency -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.MiniGamesApp.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
