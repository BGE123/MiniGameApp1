<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#E8F5E9" android:endColor="#FFFFFF" android:angle="270"/>
        </shape>
    </item>

    <!-- top vignette (semi-transparent dark overlay) -->
    <item>
        <shape>
            <gradient android:startColor="#00000000" android:endColor="#33000000" android:angle="270"/>
        </shape>
    </item>
</layer-list>