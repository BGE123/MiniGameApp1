<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base: white background with rounded bottom corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@drawable/bg_gradient"/>"/>
            <!-- only bottom corners rounded -->
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"/>
        </shape>
    </item>

    <!-- Bottom border: a thin rectangle positioned at the bottom -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="6dp"/>            <!-- control border thickness -->
            <solid android:color="#FFFFFF"/>        <!-- border color -->
            <!-- match bottom corner radius so ends are rounded -->
            <corners
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"/>
        </shape>
    </item>

</layer-list>